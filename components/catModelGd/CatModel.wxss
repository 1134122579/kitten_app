.tab_content_list_one {
  width:344rpx;
  margin-left: 10rpx;
  /* width: 100%; */
  box-sizing: border-box;
  box-shadow: 0 0 5px #ccc;
  font-size: 15px;
  padding-bottom: 5px;
  margin-top: 14px;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
}

.block_image {
  width: 100%;
  /* height: 220px; */
  height:400rpx;
  overflow: hidden;
  position: relative;
}

.M_pm {
  position: absolute;
  bottom: 3px;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 6px;
  border-radius: 5px;
}

.M_pm_l {
  background-color: rgba(0, 0, 0, .3);
  color: #fff;
  border-radius: 4px;
  font-size: 14px;
  border-radius: 5px;
  overflow: hidden;
}

.M_pm_text {
  background-color: rgba(255, 106, 110, 1);
  padding: 0 5px;
}

.M_pm_num {
  padding: 0 5px;
  width: 30px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  text-align: center;
}

.M_imageurl {
  width: 100%;
  height: 100%;
  /* min-height: 180px; */
  /* max-height: 240px; */
  /* margin-top: -50px; */
}

.M_text {
  padding: 0 4px;
}

.block_header .name {
  font-weight: 600;
  /* padding-bottom: 4px; */
  padding: 5px 0;
}

.M_id {
  color: rgb(116, 116, 116);
}

.M_desc {
  height: 40px;
  color: rgb(116, 116, 116);
  font-size: 10px;
  line-height: 2;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*! autoprefixer: ignore next */
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.M_button {
  margin: 4rpx 0;
  overflow: hidden;
  box-sizing: border-box;
  height: 60rpx;
}

.M_button_l {
  font-weight: 600;
  flex: 1;
  text-align: center;
  height: 60rpx;
  border-radius: 40rpx 0 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 60rpx;
  border: 1px solid #ccc;
  border-right: none;
}

.M_num {
  color: rgba(255, 87, 51, 1);
  font-size: 16px;
}

.M_button_r {
  /* background-color: rgba(255, 106, 110, 1); */
  height: 100%;
  /* padding: 2px 8px; */
  color: #fff;
}

.button {
  border: none;
  color: #fff;
  border-radius: 0  40rpx 40rpx 0;
  background-color: rgba(255, 106, 110, 1);
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
  padding:0 24rpx;
}

.sharebutton {
  border-radius: 50%;
  overflow: hidden;
  width: 24px;
  height: 24px;
  display: block;
  line-height: 1;
  padding: 0;
  margin: 0;
  /* background: #FF623E; */
}

.sharebutton .S_button {
  width: 24px;
  height: 24px;
  width: 100%;
  height: 100%;
  display: block;
  border: none;
}

.S_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.name_text {
  margin-right: 4px;
  max-width: 100%;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}