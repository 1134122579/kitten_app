.tab_content_list_one {
  width:344rpx;
  /* width: 100%; */
  box-sizing: border-box;
  /* box-shadow: 0 0 5px #ccc; */
  font-size: 15px;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  background: #fff;
  /* border-radius: 10rpx; */
}

.block_image {
  width: 100%;
  /* height: 220px; */
  height:400rpx;
  overflow: hidden;
  position: relative;
}

.M_pm {
  position: absolute;
  bottom: 3px;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 6px;
  border-radius: 5px;
}

.M_pm_l {
  background-color: rgba(0, 0, 0, .3);
  color: #fff;
  border-radius: 4px;
  font-size: 10px;
  border-radius: 5px;
  width:140rpx ;
  height: 40rpx;
  overflow: hidden;
  text-align: center;
  line-height: 40rpx
}

.M_pm_text {
  background-color: rgba(255, 106, 110, 1);
  display: inline-block;
  flex: 1;
  height: 100%;
}

.M_pm_num {
  flex: 1;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.M_imageurl {
  width: 100%;
  height: 100%;
  /* min-height: 180px; */
  /* max-height: 240px; */
  /* margin-top: -50px; */
}

.M_text {
  padding: 0 4px;
}

.block_header .name {
  font-weight: 600;
}

.M_id {
  color: rgb(116, 116, 116);
}

.M_desc {
  height: 40px;
  color: rgb(116, 116, 116);
  line-height: 1.5;
  font-size: 12px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*! autoprefixer: ignore next */
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.M_button {
  margin: 4rpx 0;
  box-sizing: border-box;
  height: 50rpx;
  line-height: 50rpx;
}

.M_button_l {
  flex: 1;
  text-align: center;
  border-radius: 40rpx 0 0 40rpx;
  overflow: hidden;
  height: 100%;
  line-height: 50rpx;
  border: 1px solid #ccc;
  border-right: none;
  box-sizing: border-box;
}

.M_num {
  color: rgba(255, 87, 51, 1);
  font-size: 16px;
  font-weight: bold;
padding:0 4rpx;
}

.M_button_r {
  height: 100%;
  color: #fff;
}

.button {
  border: none;
  color: #fff;
  border-radius: 0  40rpx 40rpx 0;
  background-color: rgba(255, 106, 110, 1);
  height: 50rpx;
  font-weight: 600;
  box-sizing: border-box;
  padding:0 20rpx;
}

.sharebutton {
  border-radius: 50%;
  overflow: hidden;
  width: 24px;
  height: 24px;
  display: block;
  line-height: 1;
  padding: 0;
  margin: 0;
  /* background: #FF623E; */
}

.sharebutton .S_button {
  width: 24px;
  height: 24px;
  width: 100%;
  height: 100%;
  display: block;
  border: none;
}

.S_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.name_text {
  margin-right: 4rpx;
  max-width: 100%;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}