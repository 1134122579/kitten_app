.tab_content_list_one {
  width: 46vw;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #ccc;
  font-size: 24rpx;
  padding-bottom: 10rpx;
  margin-top: 14rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 10rpx;
}

.block_image {
  width: 100%;
  max-height: 460rpx;
  min-height: 460rpx;
  overflow: hidden;
  position: relative;
}

.M_imageurl {
  width: 100%;
}

.M_pm {
  position: absolute;
  bottom: 3px;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 6px;
  border-radius: 5px;
}

.M_pm_l {
  background-color: rgba(0, 0, 0, .3);
  color: #fff;
  border-radius: 4px;
  font-size: 14px;
  border-radius: 5px;
  overflow: hidden;
}

.M_pm_text {
  background-color: rgba(255, 106, 110, 1);
  padding: 0 5px;
}

.M_pm_num {
  padding: 0 5px;
}

.M_text {
  padding: 0 4px;
}

.block_header .name {
  padding-bottom: 4px;
  max-width: 70%;
}


.M_id {
  color: rgba(102, 102, 102, 1);
  font-size: 22rpx;
  margin-left: 18rpx;
}

.M_desc {
  color: rgb(80, 80, 80);
  font-size: 10px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*! autoprefixer: ignore next */
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.M_button {
  margin: 4px 0;
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.M_button_l {
  font-weight: 600;
  flex: 1;
  text-align: center;
}

.M_num {
  color: rgba(255, 87, 51, 1);
  font-size: 16px;
}

.M_button_r {
  /* background-color: rgba(255, 106, 110, 1); */
  height: 100%;
  /* padding: 2px 8px; */
  color: #fff;
}

.button {
  border: none;
  color: #fff;
  background-color: rgba(255, 106, 110, 1);
  border-radius: 0;
}

.sharebutton {
  border-radius: 50%;
  overflow: hidden;
  width: 24px;
  height: 24px;
  display: block;
  line-height: 1;
  padding: 0;
  margin: 0;
  /* background: #FF623E; */
}

.sharebutton .S_button {
  width: 24px;
  height: 24px;
  width: 100%;
  height: 100%;
  display: block;
  border: none;
}

.S_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.name_text {
  padding-left: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20rpx;
  word-break:break-all;
}

.flooter {
  margin-top: 10rpx;
}

.onLikenum {
  font-size: 24rpx;
  margin-left: 4rpx;
}

/* 播放按钮 */
.playok {
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 60rpx;
}