.tab_content_list_one {
  width: 360rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-top: 20rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 8rpx;

}

.block_image {
  width: 100%;
  max-height: 480rrpx;
  overflow: hidden;
  position: relative;
}

.M_pm {
  position: absolute;
  bottom: 3px;
  left: 0;
  right: 0;
  box-sizing: border-box;
  margin: 6px;
  border-radius: 5px;
}

.M_imageurl {
  display: block;
  width: 100%;
  max-height: 240px;
}

.M_text {
  padding: 10rpx;
}

.block_header{
  font-size: 22rpx;
  padding: 10rpx 0;
}
.block_header .name {
  font-weight: 600;
  padding-bottom: 4px;
  flex: 1;
}

.M_id {
  color: rgb(80, 80, 80);
  font-weight: bold;
}
.M_desc {
  height: 80rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*! autoprefixer: ignore next */
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.M_button {
  margin: 4px 0;
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.M_button_l {
  font-weight: 600;
  flex: 1;
  text-align: center;
}

.M_num {
  color: rgba(255, 87, 51, 1);
  font-size: 16px;
}

.M_button_r {
  /* background-color: rgba(255, 106, 110, 1); */
  height: 100%;
  /* padding: 2px 8px; */
  color: #fff;
}

.button {
  border: none;
  color: #fff;
  background-color: rgba(255, 106, 110, 1);
  border-radius: 0;
}

.sharebutton {
  border-radius: 50%;
  overflow: hidden;
  width: 24px;
  height: 24px;
  display: block;
  line-height: 1;
  padding: 0;
  margin: 0;
  /* background: #FF623E; */
}

.sharebutton .S_button {
  width: 24px;
  height: 24px;
  width: 100%;
  height: 100%;
  display: block;
  border: none;
}

.S_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.name_text {
  margin-right: 8rpx;
  max-width: 100%;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.isNullList {
    width: 100%;
    font-size: 24rpx;
    text-align: center;
    padding: 20rpx 0;
    color: #ccc;
}
.headerImgae{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  overflow: hidden;
  display: block;
  margin-right: 10rpx;
}