/* pages/orderpage/order.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: rgb(218, 214, 214);
}

.saishipage {
  width: 100%;
  height: 100%;
  justify-content: flex-start;
  box-sizing: border-box;
}

.content {
  box-sizing: border-box;
}

.headerImage {
  width: 100%;
  height: 531rpx;
  flex-shrink: 0;
}

.imageStyle {
  display: block;
  width: 100%;
  height: 100%;
}

/* 内容 */
.matchdetail_content {
  background: #fff;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.D_title {
  font-size: 36rpx;

}

.D_header {
  align-items: flex-end;
}

.header_L {
  color: rgba(0, 0, 0, 1);
  font-size: 24rpx;
}

.lable {
  width: 90rpx;
  flex-shrink: 0;
}

.header_time {
  padding-top: 20rpx;
  font-weight: bold;
  justify-content: flex-start;
  align-items: flex-start;
}

.header_time .time {
  font-weight: bold;
}

.shareButton {
  width: 147rpx;
  height: 61rpx;
  border-radius: 10rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.buttonIcon {
  width: 100%;
  height: 100%;
  display: block;
}


.tag_style {
  background: #FEEFE6;
  color: rgba(255, 87, 51, 1);
  font-size: 14px;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.BM_bottom {
  width: 162rpx;
  height: 50rpx;
  background: #FF6A6E;
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
  line-height: 50rpx;
}

.timeData {
  color: rgba(255, 87, 51, 1);
  font-size: 28rpx;
}

.hd_text {
  padding-left: 16rpx;
  font-size: 14px;

}


/* cell */
.cell {
  font-size: 28rpx;
  padding: 10rpx 0;
  align-items: flex-start;
}

.cell_title {
  width: 140rpx;
  flex-shrink: 0;
}

.cell_text {
  font-size: 24rpx;
  font-weight: bold;
}

.locationicon {
  width: 43rpx;
  height: 40rpx;
  display: block;
  margin-left: 10rpx;
}

/* <!-- 内容  活动人物--> */

.new_content {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
  margin: 10rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.typetitle {
  display: inline-block;
  width: 150rpx;
  letter-spacing: 2px;
  padding: 5rpx 0;
  font-weight: bold;
  font-size: 32rpx;
  border-bottom: 4px solid rgba(255, 0, 0, 1);
  margin-bottom: 20rpx;
}

.typeList {
  flex-wrap: nowrap;
  margin-top: 28rpx;
  overflow-x: auto;
}

.type_block {
  padding: 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(166, 166, 166, 1);
  margin-left: 14rpx;
  flex-shrink: 0;
  font-size: 24rpx;

}

.typeListname {
  padding: 10rpx 0;
  font-weight: bold;
}

.userImg {
  width: 124rpx;
  height: 124rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
}

.userdesc {
  font-weight: normal;
}

.name {
  color: rgba(0, 0, 0, 1);
  font-weight: bold;
}

.desc {
  color: rgb(201, 201, 201);
  font-size: 24rpx;
}

.userList {
  flex-wrap: wrap;
  width: 100%;
}

.user_block {
  width: 50%;
  flex-shrink: 0;
  color: rgba(28, 28, 28, 1);
font-size: 24rpx;
}