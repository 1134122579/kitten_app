/**index.wxss**/
page {
  width: 100%;
  height: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.page_bg {
  position: absolute;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 40%;
  background: #D13127;
}

.panel {
  display: flex;
  /* overflow: hidden; */
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  box-sizing: border-box;
  width: 710rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

.header {
  /* height: 140rpx;
  background-color: #f0f0f0; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.content {
  background-color: #fff;
  /* background: #4fc08d; */
  margin-top: -100rpx;
  padding-top: 110rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 8rpx #ccc;
}

.userInfo {
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.name {
  font-weight: 600;
  font-size: 36rpx;
}

.vipTime {
  /* padding: 10rpx 0; */
  width: 100%;
  position: relative;
  width: 380rpx;
  height: 50rpx;
  overflow: hidden;
  margin: 0 auto;
margin-top: 10rpx;
}

 .vip_bg {
  width: 100%;
  height: 100%;
}

.vip_time {
  position: absolute;
  top: 0;
  left: 0;
  right: 36rpx;
  bottom: 0;
  margin: auto;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 50rpx;
  color: #F7D27F;
}

.novip{
  width: 100%;
  position: relative;
  width: 190rpx;
  height: 50rpx;
  overflow: hidden;
  margin: 0 auto;
margin-top: 10rpx;
}


.user_jf {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 10rpx;
  /* padding: 0 20%; */
  padding: 0 30rpx;
}

.user_ye {
  width: 30%;
