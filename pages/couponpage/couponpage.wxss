/* pages/orderpage/order.wxss */
page {
}

.orderList {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.orderList_header {
  padding: 0 20rpx;
  background: #fff;
}
.ol_ul {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.ol_li {
  margin-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #9c9c9c;
}
.sel_ol_li {
  color: #333;
  font-weight: 600;
  border-bottom: 2px solid #D13127;
}

/* components/CouponModel/CouponModel.wxss */
.couponStyle{
  box-sizing: border-box;
  margin: 20rpx;
  padding: 14rpx;
  border-radius: 8rpx;
   box-shadow: 0 0 8rpx #cccccc;
   display: flex;
   justify-content: flex-start;
   align-items: center;
}

.couponStyle_l{
  width: 120px;
  height: 120px;
  border-radius: 5rpx;
  overflow: hidden;
}
.codeImg{
  width: 100%;
  height: 100%;
}
.couponStyle_content{
  margin-left: 10rpx;
  flex: 1;
}
.couponStyle_{
  padding: 8rpx 0;
  font-size: 24rpx;
  color: #cccccc;
}
.couponStyle_title{
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.couponStyle_code{
  letter-spacing: 8rpx;
}
.orderList_header{
  width: 100%;
}
.orderList_content{
  flex: 1;
  width: 100%;
  overflow-y: auto;
}