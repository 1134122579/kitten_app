/* pages/activitydetail/activitydetail.wxss */
page {
  /* background: #fafafa; */
  background: #fafafa;
  background: url('http://dance.521nuochen.cn/bg.png') no-repeat;
  background-size:100%  auto;
}

.detailstyle {
  position: relative;
  /* margin-top: 100rpx; */
}

.coverimage {
  height: 360rpx;
}

.cover {
  width: 100%;
  height: 100%;
}

.textStyle {
  position: absolute;
  top: 340rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  color: #333;
  background: #fff;
  padding-bottom: 120rpx;
}

.textStyle .title {
  font-size: 40rpx;
  font-weight: 600;
  margin: 10rpx 0;
}

.desc {
  padding: 20rpx;
  font-weight: 600;
}

.rigeh_icon {
  width: 40%;
}

/* yuyue */
.yuyue {
  background: #e8e8e8;
  overflow: hidden;
  padding: 20rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
  margin-top: -130rpx;
 box-shadow: 8px 8px 10px #cfcccc;
}

/* zhuyi */
.zysx{
  margin-top: 60rpx;
}
.zysx_title{
  font-weight: 600;
}
.zysx_content{
  background: #ccc;
  /* background: #e8e8e8; */
  margin: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.headimgurl{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.itemblock{
  background: #EDEDED;
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 20rpx;
}
.name{
  flex: 1;
  text-align: center;
  box-sizing: border-box;
  padding:0 20px;
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
}
.count{
  width: 80rpx;
  text-align: center;

}
.hour_time{
  width: 80rpx;
  text-align: center;

}
.headerImgae {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userImg{
  width: 100%;
  height: 100%;
}
.userNAme {
  padding: 0 40rpx;
}
.vipicon {
  height: 100%;
}
.vipImg {
  width: 120rpx;
  /* height: 100rpx; */
}
.userInfo {
  justify-content: flex-start;
  padding: 40rpx;
  color: #333;
}
.signature{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.yuyue .van-grid-item__content {
  background: #e8e8e8;
}
