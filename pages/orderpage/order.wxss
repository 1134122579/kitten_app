/* pages/orderpage/order.wxss */
page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.orderList {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  /* padding-top: 20px; */
  /* padding-bottom: 10px; */
  overflow: hidden;
}
.orderList_header {
  /* padding: 0 20rpx; */
  width: 100%;
  background: #fff;
}
.ol_ul {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.ol_li {
  margin-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #9c9c9c;
}
.sel_ol_li {
  color: #333;
  font-weight: 600;
  border-bottom: 2px solid #D13127;
}
.orderList_content{
  flex: 1;
  width: 100%;
  overflow-y: auto;
  padding-bottom: 80px;
}

.okplayicon_content{
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 84rpx ;
}
.okplayicon_content_title{
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.okplayicon{
  width: 270rpx;
  height: 250rpx;
}
.okplayicon image{
  width: 100%;
  height: 100%;
}
