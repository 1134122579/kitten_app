/* .exchangepage {} */


.exchange_header {
  width: 100%;
  height: 380rpx;
  background-color: #D13127;
  box-sizing: border-box;
}

.headerImg {
  width: 100%;
  height: 100%;

}
.title{
  padding: 40rpx 20rpx;
}

.exchang_input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #cccccc;
  box-shadow: 0 0 8rpx #ccc;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 20rpx;
  padding: 10rpx 20rpx;
}

.input {
  height: 60rpx;
  flex: 1;
}
.button_{
  padding: 10rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.content {
  font-size: 28rpx;
  padding: 20rpx;
  background: #F7F8FA;
  box-sizing: border-box;
  margin: 0 20rpx;
  border-radius: 8rpx;
}
.c_title{
  padding: 20rpx 0;
}

.text {
  padding: 10rpx 0;
}