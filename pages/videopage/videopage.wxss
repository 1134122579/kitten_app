/* pages/videopage/videopage.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background:#333 ;
}

.videoPage {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.videoStyle {
  width: 100%;
  height: 100%;
  overflow: hidden;

}

/* 底部 */

.foolter {
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  box-sizing: border-box;
  color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom);
  /*兼容 IOS>11.2*/
}

.inputStyle {
  width: 293rpx;
  /* background-color: rgba(235, 235, 235, 1); */
  border-radius: 182rpx;
  text-align: center;
  /* color: rgb(161, 156, 156); */
  height: 73rpx;
  line-height: 73rpx;
  font-size: 28rpx;
}

.button_r {
  flex: 1;
}

.num {
  margin-left: 8rpx;
}

.plstyle {
  width: 90vw;
  padding: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.flexcenter {
  /* background-color: rgba(235, 235, 235, 1); */
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
}

.plstyle_t {
  width: 100%;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
}

.noborder {
  border: none;
}

.timestyle {
  font-size: 20rpx;
}
/* 播放 */
.playIcon{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

/* 内容 */
.contentVideo {
  position: absolute;
  bottom: 60px;
  background: rgba(255, 255, 255, .1);
  color: #fff;
  width: 80%;
  box-sizing: border-box;
  padding: 20rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom);
}

.namestyle {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gzStyle {
  width: 120rpx;
  flex-shrink: 0;
  border: 1px solid #ccc;
  text-align: center;
  border-radius: 30rpx;
}
.content_desc{
  color: rgba(255, 255, 255, 1);
font-size: 28rpx;
line-height: 1.5;
padding: 10rpx 0;
max-height:250rpx;
overflow-y: auto;
}
.Zk{
  color: rgb(20, 243, 0);
}

