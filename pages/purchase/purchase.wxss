/* pages/purchase/purchase.wxss */
.yuyue{
  padding: 20rpx;
  /* background: #ccc; */
  align-items: flex-start;
  border-bottom: 1px solid #cccccc;
}
.yuyue_left{
  width: 30%;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.imageStyke{
  width: 100%;
  height: 100%;
}
.yuyue_content{
  flex: 1;
  flex-shrink: 0;
  padding-left: 20rpx;
  height:100%;
}
.yuyue_content_title{
  font-weight: 600;

}
.yuyue_content_hd{
  margin-top: 30rpx;
}
.ckecktime{
  padding: 20rpx;
}
.ckecktime_title{
  font-size: 28rpx;
  color: #cccccc;
  padding: 20rpx 0;
}
.timeList{
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
}
.timeblock{
  margin-top: 20rpx;
  width: 31%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  background: #fafafa;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.nosuer {
  background: #fff;
}
.suer {
  background: 333;
  color: #fff;
}
.tdytime{
  padding:0 20rpx;
}
.timestyle_bottom{
   display: flex;
   width: 100%;
   justify-content: flex-start;
   align-items: center;
  flex-wrap: nowrap;
  overflow-x: auto;
  
}
.timestyle_bottom_block{
  width: 120rpx;
  flex-shrink: 0;
  height: 180rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fafafa;
  margin: 20rpx;
}
.timestyle{
  margin: 20rpx;
}
.timestyle_top{
  margin: 20rpx;

}
.suretime{
  background: #ccc;
}
.buttonstyle{
  margin: 30rpx 0;
  padding:0 40rpx;
}
.notime{
background: rgb(187, 181, 181);
color: #fff;
}
.notime .huiy_price{
color: #fff;
}
.huiy_price{
  color: #FE623D;
}
.oktime{
