/* components/Tabbar/tabbar.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99999;
  height: 48px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  box-shadow: 0 -1px 5px #cacaca;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background: #ffffff;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  height: 48px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: white;
  /* border-top: 1px solid #c2bfbf; */
}

.tab-bar-item .coverimage {
  width: 27px;
  height: 27px;
  background: white;

}

.tab-bar-item .coverview {
  font-size: 10px;
  background: white;
}
.tab-bar-item .vipIcon{
  position: absolute;
  top: 2px;
  background: #ffffff;
  padding: 6px;
  border-radius: 50%;
  width: 45px;
  height: 45px;
  /* box-shadow: 0px -1px 1px #c2c0c0 ; */
  /* border-top: 1px #c2c0c0  solid; */
}
.contentVip{
  position: relative;
}
.contentVip .coverimage{
  position: absolute;
  border-top: 1px solid #cacaca;
  top: -20px;
  padding: 5px;
  border-radius: 50%;
  overflow: hidden;
  width: 48px;
  height: 48px;
}